# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Assets.at(path="/public", file="index.html")

# API
GET     /api/news                   controllers.News.getNews(category: String, language: String)
GET     /api/words                  controllers.Words.getWords(category: String, language: String)
GET     /api/translate              controllers.Translate.getText(category: String, language: String)
GET     /api/wikipedia              controllers.Wikipedia.getCategoryTree(category: String, language: String)
GET     /api/book                   controllers.Book.getPages(category: String, language: String)
GET     /api/flow                   controllers.Flow.getFlow(category: String, language: String)

GET     /api/page                   engine.API.getPage(url: String)
GET     /api/settings               engine.API.getSettings

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    